<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_quality_line_v"
    android:layout_width="match_parent"
    android:layout_height="@dimen/quality_chart_h"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_quality_line_yvalues"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:minWidth="30dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eg_int_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_quality_line_ycolors"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#00FFFFFF" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/quality_6" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/quality_5" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/quality_4" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/quality_3" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/quality_2" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/quality_1" />

            <View
                android:layout_width="@dimen/quality_line_h"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#00FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lc_chart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="0dp" >
    </com.github.mikephil.charting.charts.LineChart>

</LinearLayout>