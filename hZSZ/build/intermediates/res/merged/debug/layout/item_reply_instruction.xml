<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:id="@+id/ll_other_mayor_intruction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large"
        android:background="@drawable/wave_both"
        android:orientation="vertical"
        android:padding="@dimen/page_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/replyIntruction"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_replyIntruction_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_singleline_margin_v"
            android:text="@string/eg_datetime"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightgray" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_singleline_margin_v" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replyIntructionChief"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_replyIntruction_chief"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="示例"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineheight"
                android:background="@drawable/shape_gray_dashline" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replyIntructionContent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_replyIntruction_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="示例"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray" />
            </TableRow>

        </TableLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/form_singleline_margin_v" >

            <LinearLayout
                android:id="@+id/ll_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium" >

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_compphoto" />

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_compphoto" />

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_compphoto" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>