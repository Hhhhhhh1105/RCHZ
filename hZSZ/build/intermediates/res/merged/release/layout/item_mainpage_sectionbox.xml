<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="0dp"
    android:background="@color/gray"
    android:baselineAligned="false"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/eg_sectionpic" />

    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="21dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_head_refresh_n" />

    <TextView
        android:id="@+id/tv_lastupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_update"
        android:layout_toRightOf="@+id/iv_update"
        android:text="@string/eg_lastupdate2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_update"
        android:layout_below="@+id/tv_lastupdate"
        android:layout_marginTop="22dp"
        android:text="@string/eg_easeriver"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="38sp" />

    <ImageView
        android:id="@+id/iv_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_section_name"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_section_name"
        android:contentDescription="@null"
        android:src="@drawable/im_quality_small_2" />

    <TextView
        android:id="@+id/tv_section_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_quality"
        android:layout_below="@+id/iv_quality"
        android:text="@string/eg_level_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:text="@string/eg_dateweek"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

</RelativeLayout>