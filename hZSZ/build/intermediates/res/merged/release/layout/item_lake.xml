<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/btn_white_bg_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/news_item_padding">

        <ImageView
            android:id="@+id/iv_lake_picture"
            android:layout_width="@dimen/river_item_img_h"
            android:layout_height="@dimen/river_item_img_h"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/tv_lake_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_lake_picture"
            android:layout_marginLeft="@dimen/news_item_text_margin_h"
            android:layout_toRightOf="@+id/iv_lake_picture"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/eg_easeriver"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/news_item_title_textsize" />

        <TextView
            android:id="@+id/tv_lake_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_lake_picture"
            android:layout_alignRight="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/news_item_text_margin_h"
            android:layout_marginRight="@dimen/news_item_text_margin_h"
            android:layout_toRightOf="@+id/iv_lake_picture"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="1"
            android:text="镇街级湖泊"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/news_item_article_textsize" />

        <TextView
            android:id="@+id/tv_distname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_lake_level"
            android:layout_alignBottom="@+id/tv_lake_level"
            android:layout_toRightOf="@+id/tv_lake_level"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/padding_large"
            android:singleLine="true"
            android:text="@string/eg_distname"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/green"
            android:textSize="@dimen/news_item_article_textsize" />

        <ImageView
            android:layout_width="@dimen/quality_icon_w"
            android:layout_height="@dimen/quality_icon_h"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/arrow_right"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>