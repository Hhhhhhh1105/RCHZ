<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/rl_section_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/btn_white_gray"
        android:padding="@dimen/page_padding" >

        <ImageView
            android:id="@+id/iv_quality_l"
            android:layout_width="@dimen/quality_icon_w"
            android:layout_height="@dimen/quality_icon_h"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/im_quality_5"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_name_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="8"
            android:text="@string/eg_river_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_level_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_name_l"
            android:text="@string/eg_level_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/littlelightgray"
            android:textSize="@dimen/font_tiny"
            android:visibility="visible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_section_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="@drawable/btn_white_gray"
        android:padding="@dimen/page_padding" >

        <ImageView
            android:id="@+id/iv_quality_r"
            android:layout_width="@dimen/quality_icon_w"
            android:layout_height="@dimen/quality_icon_h"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/im_quality_5"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_name_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="8"
            android:text="@string/eg_river_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_level_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_name_r"
            android:text="@string/eg_level_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/littlelightgray"
            android:textSize="@dimen/font_tiny" />
    </RelativeLayout>

</LinearLayout>