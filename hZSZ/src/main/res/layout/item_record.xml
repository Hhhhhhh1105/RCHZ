<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingLeft="@dimen/page_padding"
    android:paddingRight="@dimen/page_padding"
    android:paddingTop="@dimen/padding_medium" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:tag="tt:{.m:getYMD2}"
        android:text="2015-5-1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/recordRiverName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center_horizontal"
        android:tag="tt:{.recordRiverName}"
        android:text="菜洋河"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/tv_riverrecord_iscorrect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center_horizontal"
        android:text="有效？"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal" />

    <LinearLayout
        android:id="@+id/ll_deal_edit"
        android:layout_width="@dimen/two_text_btn_w"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_board_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="编辑"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/btn_green_white"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@drawable/shape_board_btn_bg"
            android:gravity="center"
            android:text="删除"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray_green"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>