<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_h"
    android:layout_marginBottom="2dp"
    android:background="@drawable/btn_bg_gray_white"
    android:paddingBottom="@dimen/news_item_padding_y"
    android:paddingLeft="@dimen/news_item_padding_x"
    android:paddingRight="@dimen/news_item_padding_x"
    android:paddingTop="@dimen/news_item_padding_y" >

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="@dimen/news_item_img_w"
        android:layout_height="@dimen/news_item_img_h"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_rigth" />

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_picture"
        android:layout_marginLeft="@dimen/news_item_text_margin_h"
        android:layout_marginRight="@dimen/news_item_text_margin_h"
        android:layout_toRightOf="@+id/iv_picture"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/eg_newtitle"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/news_item_title_textsize" />

    <TextView
        android:id="@+id/tv_distname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_title"
        android:layout_marginLeft="@dimen/news_item_text_margin_h"
        android:layout_marginRight="@dimen/news_item_text_margin_h"
        android:layout_toRightOf="@+id/iv_picture"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/eg_distname"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue"
        android:textSize="@dimen/news_item_article_textsize" />

    <TextView
        android:id="@+id/tv_news_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_picture"
        android:layout_alignRight="@+id/tv_news_title"
        android:layout_below="@+id/tv_distname"
        android:layout_marginLeft="@dimen/news_item_text_margin_h"
        android:layout_marginRight="@dimen/news_item_text_margin_h"
        android:layout_toRightOf="@+id/iv_picture"
        android:gravity="center_vertical"
        android:lines="2"
        android:text="@string/eg_newarticle"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="@dimen/news_item_article_textsize" />

</RelativeLayout>