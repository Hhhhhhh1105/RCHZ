<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_chief_comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:paddingTop="@dimen/padding_medium" >

        <RadioButton
            android:id="@+id/rb_chief_comp_unhandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tabbtn_l_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/chief_unhandle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/btn_black_white"
            android:textSize="@dimen/font_normal" />

        <RadioButton
            android:id="@+id/rb_chief_comp_handled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/shape_tabbtn_r_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/chief_handled"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/btn_black_white"
            android:textSize="@dimen/font_normal" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_chief_comp_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/white" />

</LinearLayout>